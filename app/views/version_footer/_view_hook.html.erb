<script>
    document.addEventListener("DOMContentLoaded", function() {
        var footerLink = document.querySelector("div#footer a:last-child");
        console.log("Adding version to footer link:", footerLink);
        if (footerLink) {
            var redmineVersion = " <%= Redmine::VERSION %>";
            footerLink.textContent += redmineVersion;
        }
    });
</script>